{
  "name": "static-website-template",
  "version": "1.0.0",
  "description": "template for static website",
  "author": "Vincent Will <vincent.will@vaitrade.de>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Vincenius/static-website-template"
  },
  "scripts": {
    "clean": "rimraf dist/{css/*,js/*,images/*}",
    "css:autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "css:scss": "node-sass --output-style compressed -o dist/css src/scss",
    "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
    "build:css": "run-s css:lint css:scss css:autoprefixer",
    "build:js": "webpack",
    "build:html": "posthtml -c posthtml.json",
    "build:images": "imagemin src/images/**/* --out-dir=dist/images",
    "build:lambda": "netlify-lambda build functions",
    "build": "run-s build:*",
    "serve": "browser-sync start --server 'dist' --files 'dist'",
    "watch:css": "onchange \"src/scss\" -- run-s build:css",
    "watch:js": "onchange \"src/js\" -- run-s build:js",
    "watch:html": "onchange \"src/views\" -- run-s build:html",
    "watch:images": "onchange \"src/images\" -- run-s build:images",
    "watch:lambda": "netlify-lambda serve functions",
    "watch": "run-p serve watch:*"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-env": "^7.6.3",
    "autoprefixer": "^9.0.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "browser-sync": "^2.26.5",
    "eslint": "^6.5.1",
    "htmlnano": "^0.2.4",
    "imagemin-cli": "^5.0.0",
    "mkdirp": "^0.5.1",
    "netlify-lambda": "^1.6.3",
    "node-sass": "^4.12.0",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.1.0",
    "postcss-cli": "^6.0.0",
    "posthtml": "^0.12.0",
    "posthtml-cli": "^0.5.1",
    "posthtml-modules": "^0.4.2",
    "rimraf": "^2.5.4",
    "stylelint": "^9.4.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.9"
  },
  "main": ".eslintrc.js"
}
